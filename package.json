{
  "name": "mermaid.ink",
  "version": "1.0.2",
  "description": "https://mermain.ink",
  "engines": {
    "node": ">= 13"
  },
  "main": "src/index.js",
  "scripts": {
    "docker:build": "docker build . -t jihchi/mermaid.ink:$npm_package_version",
    "docker:publish": "docker push jihchi/mermaid.ink:$npm_package_version",
    "docker:run": "docker run --rm --cap-add=SYS_ADMIN -p 3000:3000 jihchi/mermaid.ink:$npm_package_version",
    "format": "prettier --write src \"{app,test}/**/*.js\"",
    "start": "node src/index.js",
    "test": "jest",
    "test:ci": "yarn test --bail --ci",
    "test:watch": "yarn test --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jihchi/mermaid.ink.git"
  },
  "author": "jihchi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jihchi/mermaid.ink/issues"
  },
  "homepage": "https://github.com/jihchi/mermaid.ink#readme",
  "dependencies": {
    "koa": "^2.11.0",
    "koa-route": "^3.2.0",
    "mermaid": "^8.4.2",
    "puppeteer": "^2.0.0"
  },
  "devDependencies": {
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2"
  }
}
